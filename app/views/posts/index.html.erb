<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.text %></td>
        <td><%= link_to "del", post_path(post), method: :delete, data: {confirm: 'Are you shure?'} %></td>
        <td><%= post.comments.count %></td>
      </tr>
  <% end %>
</table>

<%= link_to "new post", new_post_path %>