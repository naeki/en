<div class="input-block sign-in">
  <ul class="menu">
    <span class="page-link sign-in">Вход</span>
    <span class="page-link sign-up">Регистрация</span>
    <span class="page-link repass">Восстановление</span>
  </ul>

  <div class="black-box">
      <div class="form-box signin-box">
        <%= form_for(:session, url: sessions_path) do |f| %>
            <%= f.text_field :email, :html => {:autocomplete => 'off'} %>
            <%= f.label :email %>
            <%= f.password_field :password %>
            <%= f.label :пароль %>
        <% end %>
      </div>
      <div class="form-box signup-box">
        <%= form_for @user, :html => {:autocomplete => 'off'}, url: register_path do |f| %>
                <%= f.text_field :email, :autocomplete => 'off' %>
                <%= f.label :email %>


                <%= f.password_field :password %>
                <%= f.label :пароль %>

                <%= f.password_field :password_confirmation %>
                <%= f.label :еще_раз_пароль %>
        <% end %>
      </div>
      <div class="form-box repass-box">
        <form>
            <input html="{:autocomplete=>&quot;off&quot;}" type="text" name="session[email]" id="session_email" class="val">
            <label for="user_email">Email</label>
        </form>
      </div>

    <button class="send signin"></button>
  </div>
</div>


