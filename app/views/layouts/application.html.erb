<!DOCTYPE html>
<html>
<head>
  <title>En</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div>
      <% if signed_in? %>
        <%= link_to current_user.email, root_path %>
        <%= link_to "sign out", signout_path, method: :delete %>
      <% else %>
        <%= link_to "sign in", signin_path %>
      <% end %>
    </div>
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <aside class="span4">
      <section>
        <%= render partial: 'users/userpane', locals: {user: current_user} %>
        <br>
        <ul>
          <li>
            <span id="digest">Digest</span>
          </li>
          <li>
            <%= link_to "All posts", posts_path %>
          </li>
          <li>
            <%= link_to "My posts", posts_user_path(current_user) %>
          </li>
          <li>
            <%= link_to "Feed", feed_user_path(current_user) %>
          </li>
          <li>
            <%= link_to "Users", users_path %>
          </li>
        </ul>
      </section>
    </aside>
    <div class="span8">
        <%= yield %>
    </div>
    <%= debug(params) if Rails.env.development? %>
</body>
</html>
